---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { projects } from "../data/project-data.js";
import "../styles/project-page.css";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`Projects | ${SITE_TITLE}`}
      description="Showcase of my development projects and work"
    />
  </head>
  <body>
    <Header />
    <div class="projects-section">
      <section class="page-header">
        <h1>My Projects</h1>
        <p>
          Welcome to my digital playground! Where bugs are features and coffee
          is the real MVP.
          <br />Check out these projects. <small
            ><s>they work (mostly)!</s></small
          >
        </p>
      </section>

      <div class="projects-grid">
        {
          projects.map((project) => (
            <div
              class="project-card"
              id={project.title.toLowerCase().replace(/\s+/g, "-")}
            >
              <div class="project-image">
                <img src={project.image} alt={project.title} />
              </div>
              <div id={project.id} class="project-content">
                <h2>{project.title}</h2>
                <div class="project-tags">
                  {project.tags.map((tag) => (
                    <span class="project-tag">{tag}</span>
                  ))}
                </div>
                <p>{project.description}</p>
                <div class="project-links">
                  {project.link && (
                    <a
                      href={project.link}
                      class="project-link live-link"
                      target="_blank"
                    >
                      View Live Demo
                    </a>
                  )}
                  {project.github && (
                    <a
                      href={project.github}
                      class="project-link github-link"
                      target="_blank"
                    >
                      <svg
                        class="github-icon"
                        viewBox="0 0 16 16"
                        aria-hidden="true"
                      >
                        <path
                          fill="currentColor"
                          d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
                        />
                      </svg>
                      View Code
                    </a>
                  )}
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
    <Footer />
  </body>
</html>
